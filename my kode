<script>
(function(){
  var root = document.getElementById('sr-dashboard');
  if(!root) return;


  var TILDA_REC_SELECTOR = '#rec1884608321';

  function fireInputEvents(el){
    try {
      el.dispatchEvent(new Event('input', { bubbles:true }));
      el.dispatchEvent(new Event('change', { bubbles:true }));
    } catch(e){}
  }

  function findTildaForm(){
    var rec = document.querySelector(TILDA_REC_SELECTOR);
    if(!rec) return null;
    return rec.querySelector('form');
  }

  function findField(form, kind){
    if(!form) return null;
    var inputs = Array.prototype.slice.call(form.querySelectorAll('input, textarea'));
    var byType = function(t){
      return inputs.find(function(el){ return (el.getAttribute('type')||'').toLowerCase() === t; });
    };
    var byNameLike = function(keys){
      keys = keys.map(function(k){ return k.toLowerCase(); });
      return inputs.find(function(el){
        var n = (el.getAttribute('name')||'').toLowerCase();
        var p = (el.getAttribute('placeholder')||'').toLowerCase();
        var a = (el.getAttribute('aria-label')||'').toLowerCase();
        var id = (el.getAttribute('id')||'').toLowerCase();
        var all = n + ' ' + p + ' ' + a + ' ' + id;
        return keys.some(function(k){ return all.indexOf(k) !== -1; });
      });
    };

    if(kind === 'email') return byType('email') || byNameLike(['email','e-mail','почта','mail']);
    if(kind === 'phone') return byType('tel') || byNameLike(['phone','tel','телефон','mobile']);
    if(kind === 'name')  return byType('text') || byNameLike(['name','имя','fio','фио']);
    return null;
  }

  function submitTildaForm(payload){
    var form = findTildaForm();
    if(!form) return false;

    var emailEl = findField(form, 'email');
    var nameEl  = findField(form, 'name');
    var phoneEl = findField(form, 'phone');

    if(emailEl){ emailEl.value = payload.email || ''; fireInputEvents(emailEl); }
    if(nameEl) { nameEl.value  = payload.name  || ''; fireInputEvents(nameEl);  }
    if(phoneEl){ phoneEl.value = payload.phone || ''; fireInputEvents(phoneEl); }

    // попытка отправки (Tilda обычно навешивает обработчики на submit)
    try {
      form.dispatchEvent(new Event('submit', { bubbles:true, cancelable:true }));
    } catch(e){}

    try {
      var btn = form.querySelector('button[type="submit"], input[type="submit"]');
      if(btn) btn.click();
      else form.submit();
    } catch(e){}

    return true;
  }

  var tabButtons = root.querySelectorAll('.sr-tab-btn[data-tab]');
  var panes = root.querySelectorAll('.sr-tab-pane[data-pane]');
  var titleEl = root.querySelector('[data-sr-title]');

  function setActive(tabId){
    var liveLink = root.querySelector('[data-sr-live-link]');
  if(liveLink){
    liveLink.addEventListener('click', function(e){
      var href = (liveLink.getAttribute('href') || '').trim();
      if(!href || href === '#') e.preventDefault();
    });
  }

  tabButtons.forEach(function(btn){
      btn.classList.toggle('is-active', btn.getAttribute('data-tab') === tabId);
    });
    panes.forEach(function(p){
      p.classList.toggle('is-active', p.getAttribute('data-pane') === tabId);
    });
    var activeBtn = root.querySelector('.sr-tab-btn.is-active .sr-tab-txt');
    if(titleEl && activeBtn) titleEl.textContent = activeBtn.textContent;
  }

  tabButtons.forEach(function(btn){
    btn.addEventListener('click', function(){
      setActive(btn.getAttribute('data-tab'));
    });
  });

  var modal = root.querySelector('[data-sr-modal]');
  var modalVideo = root.querySelector('[data-sr-modal-video]');
  var openBtn = root.querySelector('[data-sr-video-open]');
  var closeBtns = root.querySelectorAll('[data-sr-modal-close]');

  function openModal(){
    if(!modal) return;
    modal.classList.add('is-open');
    modal.setAttribute('aria-hidden','false');
    document.documentElement.style.overflow = 'hidden';
    if(modalVideo){
      try{ modalVideo.currentTime = 0; }catch(e){}
      var p = modalVideo.play();
      if(p && p.catch) p.catch(function(){});
    }
  }

  function closeModal(){
    if(!modal) return;
    modal.classList.remove('is-open');
    modal.setAttribute('aria-hidden','true');
    document.documentElement.style.overflow = '';
    if(modalVideo){
      modalVideo.pause();
      try{ modalVideo.currentTime = 0; }catch(e){}
    }
  }

  if(openBtn) openBtn.addEventListener('click', openModal);
  var videoWrap = root.querySelector('[data-sr-video-wrap]');
  if(videoWrap){
    videoWrap.addEventListener('click', function(e){
      var t = e.target;
      if(t && (t.closest('[data-sr-video-open]'))) return;
      openModal();
    });
  }
  closeBtns.forEach(function(b){ b.addEventListener('click', closeModal); });

  document.addEventListener('keydown', function(e){
    if(e.key === 'Escape') closeModal();
  });

  function pad2(n){ return String(n).padStart(2,'0'); }
  function formatICSLocal(dt){
    return (
      dt.getFullYear() +
      pad2(dt.getMonth()+1) +
      pad2(dt.getDate()) + 'T' +
      pad2(dt.getHours()) +
      pad2(dt.getMinutes()) +
      pad2(dt.getSeconds())
    );
  }

  function buildICS(opts){
    var uid = 'sr-dod-' + Date.now() + '@open-college';
    var now = new Date();
    var lines = [
      'BEGIN:VCALENDAR',
      'VERSION:2.0',
      'PRODID:-//Open College//SR Dashboard//RU',
      'CALSCALE:GREGORIAN',
      'METHOD:PUBLISH',
      'BEGIN:VEVENT',
      'UID:' + uid,
      'DTSTAMP:' + formatICSLocal(now),
      'DTSTART:' + formatICSLocal(opts.start),
      'DTEND:' + formatICSLocal(opts.end),
      'SUMMARY:' + opts.summary,
      'DESCRIPTION:' + (opts.description || ''),
      'LOCATION:' + (opts.location || ''),
      'END:VEVENT',
      'END:VCALENDAR'
    ];
    return lines.join('\r\n');
  }

  function downloadText(filename, text){
    var blob = new Blob([text], {type:'text/calendar;charset=utf-8'});
    var url = URL.createObjectURL(blob);
    var a = document.createElement('a');
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    a.remove();
    setTimeout(function(){ URL.revokeObjectURL(url); }, 1000);
  }

  function getActiveMiniDate(){
    var active = root.querySelector('.sr-mini-cal-day.is-active');
    if(!active) return null;
    var day = parseInt(active.textContent, 10);
    if(!day) return null;
    return { year: 2026, month: 2, day: day };
  }

  function addToCalendarFromMini(){
    var d = getActiveMiniDate();
    if(!d) return;
    var start = new Date(d.year, d.month-1, d.day, 12, 0, 0);
    var end = new Date(d.year, d.month-1, d.day, 14, 0, 0);

    var ics = buildICS({
      start: start,
      end: end,
      summary: 'День открытых дверей — МГОК',
      description: 'День открытых дверей. Запись через сайт.',
      location: 'Волгоградский проспект, дом 32, корпус 5'
    });

    downloadText('DOD_MGOK_' + d.year + '-' + pad2(d.month) + '-' + pad2(d.day) + '.ics', ics);
  }

  var addMiniBtn = root.querySelector('[data-sr-add-calendar-mini]');
  var addBigBtn = root.querySelector('[data-sr-add-calendar]');
  if(addMiniBtn) addMiniBtn.addEventListener('click', addToCalendarFromMini);
  if(addBigBtn) addBigBtn.addEventListener('click', addToCalendarFromMini);

  function maskPhone(value){
    var digits = (value || '').replace(/\D/g,'');
    if(digits.startsWith('8')) digits = '7' + digits.slice(1);
    if(!digits.startsWith('7')) digits = '7' + digits;
    digits = digits.slice(0,11);

    var p1 = digits.slice(1,4);
    var p2 = digits.slice(4,7);
    var p3 = digits.slice(7,9);
    var p4 = digits.slice(9,11);

    var out = '+7';
    if(p1) out += ' (' + p1;
    if(p1 && p1.length === 3) out += ')';
    if(p2) out += ' ' + p2;
    if(p3) out += '-' + p3;
    if(p4) out += '-' + p4;
    return out;
  }

  var form = root.querySelector('.sr-contact-form');
  if(form){
    var email = form.querySelector('#sr-email');
    var name = form.querySelector('#sr-name');
    var phone = form.querySelector('#sr-phone');
    var policy = form.querySelector('.sr-policy-check');

    function setErr(input, msg){
      var wrap = input.closest('.sr-field');
      if(!wrap) return;
      var err = wrap.querySelector('.sr-field-error');
      if(err) err.textContent = msg || '';
      input.setAttribute('aria-invalid', msg ? 'true' : 'false');
    }

    function validateEmail(v){
      v = (v || '').trim();
      if(!v) return 'Введите почту';
      var ok = /^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/.test(v);
      if(!ok) return 'Некорректная почта';
      return '';
    }

    function validateName(v){
      v = (v || '').trim();
      if(!v) return 'Введите имя';
      if(v.length < 2) return 'Минимум 2 символа';
      return '';
    }

    function validatePhone(v){
      var digits = (v || '').replace(/\D/g,'');
      if(!digits) return 'Введите телефон';
      if(digits.length !== 11) return 'Некорректный телефон';
      if(!digits.startsWith('7')) return 'Телефон должен начинаться с +7';
      return '';
    }

    function validatePolicy(){
      if(!policy.checked) return 'Нужно согласие';
      return '';
    }

    if(phone){
      phone.addEventListener('input', function(){
        phone.value = maskPhone(phone.value);
      });
    }

    form.addEventListener('submit', function(e){
      e.preventDefault();

      var e1 = validateEmail(email.value);
      var e2 = validateName(name.value);
      var e3 = validatePhone(phone.value);

      setErr(email, e1);
      setErr(name, e2);
      setErr(phone, e3);

      var policyMsg = validatePolicy();
      var policyErrHost = form.querySelector('.sr-form-row-phonebtn .sr-field:last-child .sr-field-error');
      if(policyErrHost) policyErrHost.textContent = policyMsg || '';

      if(e1 || e2 || e3 || policyMsg) return;

      submitTildaForm({
        email: (email.value || '').trim(),
        name: (name.value || '').trim(),
        phone: (phone.value || '').trim()
      });

      form.reset();
      setErr(email,''); setErr(name,''); setErr(phone,'');
      if(policyErrHost) policyErrHost.textContent = '';
});
  }
})();
</script>
